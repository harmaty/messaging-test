<%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :content, 'Message', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => "form-control", :rows => "3" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :recipient_id, 'To', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :message, :recipient_id, User.all, :id, :name %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                messages_path, :class => 'btn' %>
  </div>
<% end %>
