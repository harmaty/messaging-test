<%- model_class = Message -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="row-fluid">
  <div class="span2">
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li <% if @folder == 'inbox' %>class="active"<% end %>>
          <%= link_to "Inbox (#{current_user.inbox_messages.unread.count})", messages_path %>
        </li>
        <li <% if @folder == 'sent' %>class="active"<% end %> >
          <%= link_to 'Sent', messages_path(folder: 'sent') %>
        </li>
      </ul>
    </div>
    <!--/.well -->
  </div>
  <!--/span-->
  <div class="span10">
    <table class="table">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:content) %></th>
        <th><%= @folder == 'sent'? 'To' : 'From' %></th>
        <th>Sent at</th>
        <th><%= t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @messages.each do |message| %>
          <tr <% if message.is_read? %>class="read"<% end %>>
            <td><%= link_to message.id, message_path(message) %></td>
            <td><%= link_to truncate(message.content, length: 25), message_path(message) %></td>
            <td><%= @folder == 'sent'? message.recipient : message.sender %></td>
            <td><%= l message.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_message_path(message), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          message_path(message),
                          :method => :delete,
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to 'New Message',
                new_message_path,
                :class => 'btn btn-primary' %>
  </div>
</div><!--/row-->
